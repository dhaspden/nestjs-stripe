{
  "name": "nestjs-stripe",
  "version": "0.4.1",
  "description": "Provides an injectable Stripe client to nestjs modules",
  "repository": "https://github.com/dhaspden/nestjs-stripe",
  "author": {
    "name": "Dylan Aspden",
    "url": "http://github.com/dhaspden"
  },
  "license": "MIT",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "codecov": "codecov",
    "format": "prettier --write '**/*.md' '**/*.json' '**/*.ts' '**/*.yml' .prettierrc",
    "prebuild": "rimraf lib",
    "prepublish:npm": "yarn build",
    "publish:npm": "yarn publish --access public",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "devDependencies": {
    "@nestjs/common": "^8.0.7",
    "@nestjs/core": "^8.0.7",
    "@nestjs/testing": "^8.0.7",
    "@types/jest": "27.0.2",
    "@types/node": "16.10.1",
    "codecov": "3.8.3",
    "jest": "27.2.2",
    "prettier": "2.4.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "3.0.2",
    "rxjs": "^7.3.0",
    "stripe": "^8.176.0",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^7.1.0",
    "stripe": "^8.0.0"
  },
  "keywords": [
    "nestjs",
    "stripe",
    "payment"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
